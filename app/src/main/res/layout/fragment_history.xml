<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main"
    android:id="@+id/show_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomBar"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@color/bg_box">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/asset_31_3x"
                    android:padding="6dp"
                    android:layout_weight="1"/>

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_see_all"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomBar"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:background="@color/bg_box">

            <FrameLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="20dp">

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:text="16:50 - 17:20"
                    android:textColor="#fff"
                    android:textSize="18dp"/>

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/history_date"
                    android:textSize="18dp"
                    android:textColor="#d9c55d"
                    android:gravity="center_vertical"
                    android:background="@color/bg_box"/>

            </FrameLayout>

            <FrameLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="@dimen/custom_image_h"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/bmw"/>

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/history_brand"
                    android:textSize="18dp"
                    android:textColor="#d9c55d"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/bg_box"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottomBar"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/border_plate_number">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/bottomBar"
                        android:orientation="vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/border_inside_plate"
                        android:layout_margin="4dp"
                        android:padding="5dp">

                        <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                            android:id="@+id/tv_plate_number"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Plate Number"
                            android:textSize="18dp"
                            android:lines="1"
                            android:textColor="#000"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:ems="5"/>

                        <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                            android:id="@+id/tv_province"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Province"
                            android:textSize="16dp"
                            android:textColor="#000"
                            android:gravity="center_horizontal"
                            android:ems="5"/>

                    </LinearLayout>

                </LinearLayout>

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/history_plate"
                    android:textSize="18dp"
                    android:textColor="#d9c55d"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/bg_box"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|center_vertical">

                <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right|center_vertical"
                        android:padding="5dp"
                        android:text="#7451"
                        android:textColor="@color/bg_box"
                        android:textSize="18dp" />

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/history_ref"
                        android:textSize="18dp"
                        android:textColor="#d9c55d"
                        android:layout_gravity="right|center_vertical"
                        android:background="@color/bg_box"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right|center_vertical"
                        android:padding="5dp"
                        android:text="#451"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="@string/history_service"
                        android:textSize="18dp"
                        android:textColor="#d9c55d"
                        android:background="@color/bg_box"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="1">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="22,725.00"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/history_price"
                        android:textColor="#d9c55d"
                        android:textSize="18dp"
                        android:gravity="center_vertical|right"
                        android:background="@color/bg_box"
                        android:layout_marginRight="5dp"/>

                </FrameLayout>

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/bg_main"
                android:divider="#fff"
                android:dividerHeight="1px">
            </ListView>

            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                android:id="@+id/tv_not_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_not_found"
                android:textSize="18dp"
                android:textColor="#fff"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"/>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>