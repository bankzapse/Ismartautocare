<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lv_box1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/bg_box"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/lv_box1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="6dp"
                    android:src="@drawable/asset_30_2x" />

                <com.ismartautocare.MyFontsStyle.MyTextViewFontsBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="15dp"
                    android:text="@string/new_service_car"
                    android:textColor="#d9c55d"
                    android:textSize="18dp" />

                //box1_1
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_box1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/lv_box1_2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_service_brand"
                        android:textSize="18dp"
                        android:textColor="#d9c55d"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/image_brand"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/asset_76_2x"
                        android:layout_marginTop="10dp"/>

                    //box1_2_1
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_box1_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_service_plate"
                        android:textSize="18dp"
                        android:textColor="#d9c55d"
                        android:background="@android:color/transparent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/bottomBar"
                        android:orientation="vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/border_inside_plate"
                        android:layout_marginTop="10dp"
                        android:padding="5dp">

                        <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                            android:id="@+id/tv_plate_number"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Plate Number"
                            android:textSize="16dp"
                            android:lines="1"
                            android:textColor="#000"
                            android:gravity="center_horizontal"/>

                        <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                            android:id="@+id/tv_province"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Province"
                            android:textSize="16dp"
                            android:textColor="#000"
                            android:gravity="center_horizontal"
                            android:ems="20"/>

                    </LinearLayout>

                    //box1_2_2
                </LinearLayout>

                //box1_2
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_box1_2_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lv_box1_2_1_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/new_service_model"
                        android:textColor="#d9c55d"
                        android:textSize="18dp" />

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="Honda"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    //box1_2_1_brand
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_box1_2_2_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/new_service_service_size"
                        android:textColor="#d9c55d"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/image_car_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/car_type_s_1x" />

                    //box1_2_2_brand
                </LinearLayout>

                //box1_2_brand
            </LinearLayout>

            //box1
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/bg_box"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/lv_box2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="6dp"
                    android:src="@drawable/asset_28_2x" />

                <com.ismartautocare.MyFontsStyle.MyTextViewFontsBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="15dp"
                    android:text="@string/new_service_driver"
                    android:textColor="#d9c55d"
                    android:textSize="18dp" />

                //box2_1
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_box2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/lv_box_profile_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/image_profile_true_2x" />

                    <LinearLayout
                        android:id="@+id/lv_sun_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/lv_box2_2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/asset_98_2x" />

                            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                android:id="@+id/tv_member_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:lines="1"
                                android:text="Bank"
                                android:textColor="#fff"
                                android:textSize="18dp" />

                            //box2_2_1
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lv_box2_2_2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/asset_100_2x" />

                            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                android:id="@+id/tv_member_tel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:lines="1"
                                android:text="0898765432"
                                android:textColor="#fff"
                                android:textSize="18dp" />

                            //box2_2_2_1
                        </LinearLayout>

                        //lv_sun_profile
                    </LinearLayout>

                    //lv_box_profile_member
                </LinearLayout>


                //box2_2
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_box2_2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:src="@drawable/asset_28_2x"-->
                <!--android:padding="6dp"/>-->

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:text="@string/new_service_member"
                    android:textColor="#d9c55d"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_member_car_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/car_type_l_1x" />

                //box2_2_3
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_box2_2_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/lv_box2_2_1_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:text="@string/new_service_member_id"
                        android:textColor="#d9c55d"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_member_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:lines="1"
                        android:text="id    "
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    //box2_2_1_member
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_box2_2_2_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:text="@string/new_service_member_type"
                        android:textColor="#d9c55d"
                        android:textSize="18dp" />

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:id="@+id/tv_member_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:lines="1"
                        android:text="member type"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    //box2_2_2_member
                </LinearLayout>

                //box2_2_member
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_box2_3_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="@string/new_service_status"
                    android:textColor="#d9c55d"
                    android:textSize="18dp" />

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="EXP date 12 Sep 2017"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/confirm" />

                //box2_3_status
            </LinearLayout>

            //box2
        </LinearLayout>

        //main
    </LinearLayout>

</android.support.constraint.ConstraintLayout>