<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomBar"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="40dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="25dp">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#d9c55d"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#d9c55d"
                        android:layout_weight="1"/>

                    <View
                        android:id="@+id/view_internet"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#fff"
                        android:layout_weight="1"/>

                    </LinearLayout>

                </FrameLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/remove_3x"
                    android:background="@color/bg_main"/>

                <ImageView
                    android:id="@+id/image_internet"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="right"
                    android:src="@drawable/internet_con_3x"
                    android:background="@color/bg_main"/>

            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:src="@drawable/user_status_3x"
            android:background="@color/bg_main"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomBar"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:paddingBottom="30dp">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#d9c55d"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#d9c55d"
                            android:layout_weight="1"/>

                        <View
                            android:id="@+id/view_printer"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#fff"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </FrameLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/remove_3x"
                    android:background="@color/bg_main"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/image_printer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="right"
                    android:src="@drawable/printer_con_3x"
                    android:background="@color/bg_main"/>

            </FrameLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="40dp">

            <TableRow>

                <com.ismartautocare.MyFontsStyle.MyTextViewFontsBold
                    android:text="@string/setting_printer"
                    android:textSize="18dp"
                    android:textColor="#d9c55d"
                    android:padding="15dp"
                    android:background="@android:color/transparent"
                    android:lines="1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:id="@+id/tv_print_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Failed to open port"
                        android:textSize="18dp"
                        android:textColor="#fff"
                        android:padding="15dp"
                        android:background="@android:color/transparent"
                        android:lines="1" />

                    <ImageView
                        android:id="@+id/refresh_connect"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|right"
                        android:background="@color/bg_main"
                        android:src="@drawable/refresh_3x" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">

                <com.ismartautocare.MyFontsStyle.MyTextViewFontsBold
                    android:text="@string/setting_update"
                    android:textSize="18dp"
                    android:textColor="#d9c55d"
                    android:padding="15dp"
                    android:background="@android:color/transparent"
                    android:lines="1" />

                <LinearLayout>

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon, 06 Feb 2017 16:50"
                        android:textSize="18dp"
                        android:textColor="#fff"
                        android:padding="15dp"
                        android:background="@android:color/transparent"
                        android:lines="1" />

                    <ImageView
                        android:id="@+id/refresh_date"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/refresh_3x"
                        android:background="@color/bg_main"/>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">

                <com.ismartautocare.MyFontsStyle.MyTextViewFontsBold
                    android:text="@string/setting_auto_search"
                    android:textSize="18dp"
                    android:textColor="#d9c55d"
                    android:padding="15dp"
                    android:background="@android:color/transparent"
                    android:lines="1" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:layout_marginLeft="10dp"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <!--<Button-->
        <!--android:id="@+id/bt_reload"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Reload"-->
        <!--android:textSize="18dp"-->
        <!--android:background="@drawable/border_button"-->
        <!--android:textColor="#000"-->
        <!--android:paddingLeft="30dp"-->
        <!--android:paddingRight="30dp"-->
        <!--android:layout_gravity="center_horizontal|center_vertical"/>-->

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#383838"
        android:layout_gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:textSize="18dp"
            android:textColor="#fff"
            android:src="@drawable/promo_2x"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>


</LinearLayout>