<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:padding="12dp">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_dialog"
            android:layout_margin="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/bg_toolbar"
                android:padding="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/lv_box2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/bg_box"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/lv_box2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/asset_28_2x"
                            android:padding="6dp"/>

                        <com.ismartautocare.MyFontsStyle.MyTextViewFontsBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MEMBER REGISTERATION"
                            android:textSize="18dp"
                            android:textColor="#d9c55d"
                            android:padding="15dp"
                            android:background="@android:color/transparent"/>

                        //box2_1
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_box2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:id="@+id/lv_box_profile_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">

                                <com.mikhaellopez.circularimageview.CircularImageView
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/imageprofile"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/image_profile_true_2x"
                                    app:civ_border_color="@android:color/transparent"
                                    app:civ_border_width="2dp"
                                    app:civ_shadow="true"
                                    app:civ_shadow_color="#646464"
                                    android:layout_gravity="center_horizontal"/>

                            </FrameLayout>

                            <LinearLayout
                                android:id="@+id/lv_sun_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:layout_marginLeft="5dp">

                                <LinearLayout
                                    android:id="@+id/lv_box2_2_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/asset_98_2x"/>

                                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*"
                                        android:textSize="18dp"
                                        android:textColor="#d9c55d"
                                        android:background="@android:color/transparent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"/>

                                    <com.ismartautocare.MyFontsStyle.MyEdittextFonts
                                        android:id="@+id/et_name_driver"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:hint="name"
                                        android:textSize="18dp"
                                        android:textColorHint="#bebdbd"
                                        android:backgroundTint="#fff"
                                        android:lines="1"
                                        android:textColor="#fff"
                                        android:ems="100"/>

                                    //box2_2_1
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/asset_99_2x"/>

                                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*"
                                        android:textSize="18dp"
                                        android:textColor="#d9c55d"
                                        android:background="@android:color/transparent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"/>

                                    <com.ismartautocare.MyFontsStyle.MyEdittextFonts
                                        android:id="@+id/et_brd_driver"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:hint="Birth Date"
                                        android:textSize="18dp"
                                        android:textColorHint="#bebdbd"
                                        android:backgroundTint="#fff"
                                        android:lines="1"
                                        android:textColor="#fff"
                                        android:ems="100"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lv_box2_2_2_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/asset_100_2x"/>

                                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*"
                                        android:textSize="18dp"
                                        android:textColor="#d9c55d"
                                        android:background="@android:color/transparent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"/>

                                    <com.ismartautocare.MyFontsStyle.MyEdittextFonts
                                        android:id="@+id/et_phone_driver"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:hint="089-2616445"
                                        android:textSize="18dp"
                                        android:textColorHint="#bebdbd"
                                        android:backgroundTint="#fff"
                                        android:lines="1"
                                        android:textColor="#fff"
                                        android:ems="100"
                                        android:inputType="phone"/>

                                    //box2_2_2_1
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/email_3x"/>

                                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*"
                                        android:textSize="18dp"
                                        android:textColor="#d9c55d"
                                        android:background="@android:color/transparent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"/>

                                    <com.ismartautocare.MyFontsStyle.MyEdittextFonts
                                        android:id="@+id/et_email_driver"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:hint="Email"
                                        android:textSize="18dp"
                                        android:textColorHint="#bebdbd"
                                        android:backgroundTint="#fff"
                                        android:lines="1"
                                        android:textColor="#fff"
                                        android:ems="100"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/address_3x"/>

                                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*"
                                        android:textSize="18dp"
                                        android:textColor="#d9c55d"
                                        android:background="@android:color/transparent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="5dp"/>

                                    <com.ismartautocare.MyFontsStyle.MyEdittextFonts
                                        android:id="@+id/et_address_driver"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:hint="Address"
                                        android:textSize="18dp"
                                        android:textColorHint="#bebdbd"
                                        android:backgroundTint="#fff"
                                        android:lines="2"
                                        android:textColor="#fff"
                                        android:ems="100"/>

                                </LinearLayout>

                                //lv_sun_profile
                            </LinearLayout>

                            //lv_box_profile_member
                        </LinearLayout>

                        //box2_2
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_box2_2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MEMBER ID"
                            android:textSize="18dp"
                            android:textColor="#d9c55d"
                            android:padding="5dp"
                            android:background="@android:color/transparent"/>

                        <com.ismartautocare.MyFontsStyle.MyEdittextFonts
                            android:id="@+id/et_id_member_driver"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:hint="ID member"
                            android:textSize="18dp"
                            android:textColorHint="#bebdbd"
                            android:backgroundTint="#fff"
                            android:lines="1"
                            android:textColor="#fff"
                            android:ems="100"/>

                        //box2_2_3
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_box2_2_member"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!--<LinearLayout-->
                            <!--android:id="@+id/lv_box2_2_1_member"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:orientation="horizontal"-->
                            <!--android:gravity="center_vertical"-->
                            <!--android:layout_weight="1">-->

                            <!--<com.ismartautocare.MyFontsStyle.MyTextViewFonts-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="ID"-->
                                <!--android:textSize="18dp"-->
                                <!--android:textColor="#d9c55d"-->
                                <!--android:background="@android:color/transparent"-->
                                <!--android:layout_marginRight="10dp"/>-->

                            <!--<com.ismartautocare.MyFontsStyle.MyEdittextFonts-->
                                <!--android:id="@+id/et_id_member_driver"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:hint="ID member"-->
                                <!--android:textSize="18dp"-->
                                <!--android:textColorHint="#bebdbd"-->
                                <!--android:backgroundTint="#fff"-->
                                <!--android:lines="1"-->
                                <!--android:textColor="#fff"-->
                                <!--android:ems="100"/>-->

                            <!--//box2_2_1_member-->
                        <!--</LinearLayout>-->

                        <LinearLayout
                            android:id="@+id/lv_box2_2_2_member"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_weight="1">

                            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MEMBER TYPE"
                                android:textSize="18dp"
                                android:textColor="#d9c55d"
                                android:background="@android:color/transparent"
                                android:padding="5dp"/>

                            <NumberPicker
                                android:id="@+id/numberPickerType"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:theme="@style/NumberPickerText"/>

                            //box2_2_2_member
                        </LinearLayout>

                        //box2_2_member
                    </LinearLayout>

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CAR SIZE"
                        android:textSize="18dp"
                        android:textColor="#d9c55d"
                        android:background="@android:color/transparent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/image_member_car_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:src="@drawable/car_type_s_1x_w"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/image_member_car_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:src="@drawable/car_type_m_1x_w"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/image_member_car_l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/car_type_l_1x_w"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/image_member_car_xl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/car_type_xl_1x_w"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/image_member_car_xxl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/car_type_xxl_1x_w"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/image_member_car_sport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/car_type_sport_1x_w"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/image_member_car_super"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/car_type_super_1x_w"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    //box2
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_box1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/bg_box"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <TableRow>

                            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                android:text="Date : "
                                android:textSize="18dp"
                                android:textColor="#d9c55d"
                                android:padding="10dp"
                                android:background="@android:color/transparent"
                                android:lines="1" />

                            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                android:id="@+id/tv_date"
                                android:text="Failed to open port"
                                android:textSize="18dp"
                                android:textColor="#fff"
                                android:padding="10dp"
                                android:background="@android:color/transparent"
                                android:lines="1" />

                        </TableRow>

                        <TableRow>

                            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                android:text="Issued form : "
                                android:textSize="18dp"
                                android:textColor="#d9c55d"
                                android:padding="10dp"
                                android:background="@android:color/transparent"
                                android:lines="1" />

                            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                android:id="@+id/tv_issuedfrom"
                                android:text="Mon, 06 Feb 2017 16:50"
                                android:textSize="18dp"
                                android:textColor="#fff"
                                android:padding="10dp"
                                android:background="@android:color/transparent"
                                android:lines="1" />

                        </TableRow>

                        <TableRow>

                            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                android:text="Accept SMS : "
                                android:textSize="18dp"
                                android:textColor="#d9c55d"
                                android:padding="10dp"
                                android:background="@android:color/transparent"
                                android:lines="1" />

                            <Switch
                                android:id="@+id/sw_sms"
                                android:layout_gravity="left|center_vertical"
                                android:scaleX="1.5"
                                android:scaleY="1.5"
                                android:layout_marginLeft="10dp"/>

                        </TableRow>

                        <TableRow>

                            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                                android:text="Paid by : "
                                android:textSize="18dp"
                                android:textColor="@color/yellow"
                                android:padding="10dp"
                                android:background="@android:color/transparent"
                                android:lines="1" />


                            <com.llollox.androidtoggleswitch.widgets.ToggleSwitch
                                android:id="@+id/multiple_toggle_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:textToggleLeft="Cash"
                                app:textToggleRight="Credit card"
                                android:textSize="18sp"
                                app:toggleHeight="40dp"
                                app:toggleWidth="152dp"
                                app:checkedBackgroundColor="@color/yellow"
                                app:checkedTextColor="@color/bg_main"
                                app:uncheckedBackgroundColor="@color/bg_toolbar"
                                app:uncheckedTextColor="@android:color/white"/>

                        </TableRow>

                    </TableLayout>

                    //box1
                </LinearLayout>

                <com.ismartautocare.MyFontsStyle.MyButtonFonts
                    android:id="@+id/bt_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:textSize="18dp"
                    android:background="@drawable/border_button_login"
                    android:textStyle="bold"
                    android:textColor="@color/bg_main"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/image_dis_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/remove_3x"
            android:layout_gravity="center_vertical|right" />

    </RelativeLayout>

    </FrameLayout>

</ScrollView>