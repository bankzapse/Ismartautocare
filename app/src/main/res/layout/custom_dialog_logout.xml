<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dialog"
        android:padding="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fail_3x"
                    android:layout_margin="10dp"/>

                <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                    android:id="@+id/tv_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:textSize="22dp"
                    android:textColor="#d9c55d"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:textSize="24dp"
                android:textColor="#d9c55d"
                android:ems="30"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"/>

            <com.ismartautocare.MyFontsStyle.MyButtonFonts
                android:id="@+id/bt_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textSize="18dp"
                android:background="@drawable/border_button_login"
                android:textStyle="bold"
                android:textColor="@color/bg_main"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
