<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBar"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/image_brand"
            android:layout_width="@dimen/custom_image_w"
            android:layout_height="@dimen/custom_image_h"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/bmw"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomBar"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/border_plate_number">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bottomBar"
                    android:orientation="vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/border_inside_plate"
                    android:layout_margin="5dp"
                    android:padding="10dp">

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:id="@+id/tv_plate_number"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Plate Number"
                        android:textSize="18dp"
                        android:lines="1"
                        android:textColor="#000"
                        android:gravity="center_horizontal"
                        android:ems="5"/>

                    <com.ismartautocare.MyFontsStyle.MyTextViewFonts
                        android:id="@+id/tv_province"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Province"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:gravity="center_horizontal"
                        android:ems="5"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>